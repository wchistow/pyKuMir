start: code_block
code_block: statement ((NEWLINE | ";") statement)*
statement: set_var

NUMBER: /\d+(\.\d*)?/
STRING: /".*"/
CHAR: "'" /.?/ "'"
NAME: /[A-Za-zА-Яа-я_][A-Za-zА-Яа-я_0-9]*/
BOOL: "да" | "нет"
OP: "+" | "-" | "*" | "/" | "=" | "<" | ">" | "," | "." | ">=" | "<=" | "<>"
COMMENT: "|" /[^\n]/*
BRACKET_OPEN: "("
BRACKET_CLOSE: ")"

TYPE: "цел" | "вещ" | "лог" | "лит" | "сим" | "цел таб" | "вещ таб" | "лог таб" | "лит таб" | "сим таб"

bin_op: expr OP expr
expr: value | bin_op | BRACKET_OPEN expr BRACKET_CLOSE

set_var: TYPE var_name (":=" expr)?
var_name: NAME ("," NAME)*
value: NUMBER | STRING | CHAR | NAME | BOOL

%import common.WS
%import common.NEWLINE
%ignore WS
%ignore COMMENT
